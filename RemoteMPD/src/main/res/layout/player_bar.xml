<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageButton
            android:layout_width="62dp"
            android:layout_height="52dp"
            android:scaleType="centerInside"
            android:id="@+id/btnRandom"
            android:src="@drawable/ic_media_shuffle"
            android:background="?android:attr/actionBarItemBackground"/>

        <ImageButton
            android:layout_width="62dp"
            android:layout_height="52dp"
            android:scaleType="centerInside"
            android:id="@+id/btnPrev"
            android:src="@drawable/ic_media_previous"
            android:background="?android:attr/actionBarItemBackground"/>

        <ImageButton
            android:layout_width="62dp"
            android:layout_height="52dp"
            android:scaleType="centerInside"
            android:id="@+id/btnPlay"
            android:src="@drawable/ic_media_play"
            android:background="?android:attr/actionBarItemBackground"/>

        <ImageButton
            android:layout_width="62dp"
            android:layout_height="52dp"
            android:scaleType="centerInside"
            android:id="@+id/btnNext"
            android:src="@drawable/ic_media_next"
            android:background="?android:attr/actionBarItemBackground"/>

        <ImageButton
            android:layout_width="62dp"
            android:layout_height="52dp"
            android:scaleType="centerInside"
            android:id="@+id/btnRepeat"
            android:src="@drawable/ic_media_repeat"
            android:background="?android:attr/actionBarItemBackground"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

        <RelativeLayout
            android:id="@+id/progress_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip" >

            <TextView
                android:id="@+id/currentTrackTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingLeft="10dip"
                android:text="0:20"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/totalTrackTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:paddingRight="10dip"
                android:text="3:45"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seekProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:paddingLeft="30dip"
                android:paddingRight="30dip"
                android:progress="0" />
        </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/nowPlayingLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Current Song"
                    android:id="@+id/txtSong"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Album"
                    android:id="@+id/txtAlbum"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Album"
                    android:id="@+id/txtArtist"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center_horizontal"/>

                </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dip">

            <SeekBar
                android:id="@+id/seekVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:max="100"
                android:progress="0"/>

            <ImageView
                android:id="@+id/icnVolume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:src="@drawable/ic_action_volume" />

            </RelativeLayout>

    </LinearLayout>

</LinearLayout>