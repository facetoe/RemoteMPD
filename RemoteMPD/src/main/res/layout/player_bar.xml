<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageButton
            android:layout_width="62dp"
            android:layout_height="52dp"
            android:scaleType="centerInside"
            android:id="@+id/btnRandom"
            android:src="@drawable/ic_media_shuffle"
            android:background="?android:attr/actionBarItemBackground"/>

        <ImageButton
            android:layout_width="62dp"
            android:layout_height="52dp"
            android:scaleType="centerInside"
            android:id="@+id/btnPrev"
            android:src="@drawable/ic_media_previous"
            android:background="?android:attr/actionBarItemBackground"/>

        <ImageButton
            android:layout_width="62dp"
            android:layout_height="52dp"
            android:scaleType="centerInside"
            android:id="@+id/btnPlay"
            android:src="@drawable/ic_media_play"
            android:background="?android:attr/actionBarItemBackground"/>

        <ImageButton
            android:layout_width="62dp"
            android:layout_height="52dp"
            android:scaleType="centerInside"
            android:id="@+id/btnNext"
            android:src="@drawable/ic_media_next"
            android:background="?android:attr/actionBarItemBackground"/>

        <ImageButton
            android:layout_width="62dp"
            android:layout_height="52dp"
            android:scaleType="centerInside"
            android:id="@+id/btnRepeat"
            android:src="@drawable/ic_media_repeat"
            android:background="?android:attr/actionBarItemBackground"/>

    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

        <SeekBar
            android:id="@+id/seekVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/seekVolume"
                android:id="@+id/nowPlayingLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Current Song"
                    android:id="@+id/txtSong"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="ArtistAlbum"
                    android:id="@+id/txtAritstAlbum"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center_horizontal"/>
                </LinearLayout>


        <SeekBar
            android:id="@+id/seekTrackProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nowPlayingLayout"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

    </RelativeLayout>

</LinearLayout>